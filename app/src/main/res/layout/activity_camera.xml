<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8eb4e3"
    >

    <ImageView
        android:layout_width="150sp"
        android:layout_height="70sp"
        android:layout_marginTop="16sp"
        android:background="@drawable/top_logo"
        android:layout_gravity="center_horizontal|top"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        android:paddingTop="50sp"
        android:paddingBottom="80sp"
        tools:context=".ui.activity.CameraActivity">
    </FrameLayout>


    <Button
        android:id="@+id/btn_capture1"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/capture"
        android:layout_gravity="bottom|center_horizontal"
        android:onClick="capture"
        android:visibility="invisible"
        />


    <FrameLayout
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="#8eb4e3">
        <ImageView
            android:layout_width="330sp"
            android:layout_height="200sp"
            android:background="@drawable/dxd"
            android:layout_marginTop="180sp"
            android:layout_marginRight="8sp"
            android:layout_gravity="top|center_horizontal"/>

        <ImageView
            android:layout_width="250sp"
            android:layout_height="50sp"
            android:background="@drawable/copyright"
            android:layout_marginBottom="18sp"
            android:layout_gravity="bottom|center_horizontal"/>


    </FrameLayout>

</FrameLayout>